{
  "name": "decsys",
  "version": "2.1.0",
  "description": "The DECSYS Project main repository",
  "main": "index.js",
  "repository": "https://github.com/decsys/decsys.git",
  "author": "Jon Couldridge <jonathan.couldridge@nottingham.ac.uk>",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "config",
    "docs",
    "app/client-app",
    "packages/*",
    "response-items"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "packageManager": "yarn@3.0.2"
}
